100 REM IBM PC BASIC
110 REM PROGRAM CAL2NUMS.BAS
120 CLS
130 COLOR 2
140 INPUT "N1: ", N1
150 INPUT "N2: ", N2
155 PRINT "INPUT CAL COMMAND: "
160 CC$ = INPUT$(3)
170 IF CC$ = "ADD" THEN N3 = N1 + N2
180 IF CC$ = "SUB" THEN N3 = N1 - N2
190 IF CC$ = "MUL" THEN N3 = N1 * N2
200 IF CC$ = "DIV" THEN N3 = N1 / N2
300 PRINT "N3 = "; N3